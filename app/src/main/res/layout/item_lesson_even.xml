<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/even_lesson_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lesson6"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/even_lesson_lock"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/lock"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/even_lesson_image"
        app:layout_constraintTop_toTopOf="@id/even_lesson_image"
        app:layout_constraintEnd_toEndOf="@id/even_lesson_image"
        app:layout_constraintBottom_toBottomOf="@id/even_lesson_image"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/even_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/even_unlocked"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintStart_toEndOf="@id/even_lesson_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>