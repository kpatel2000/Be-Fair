                app:layout_constraintTop_toBottomOf="@id/u" />

            <TextView
                android:id="@+id/k"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_keyboard"
                android:gravity="center"
                android:padding="4dp"
