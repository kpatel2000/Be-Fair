<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/detail_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Republic Act Number 9710"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:background="@drawable/bg_lesson_title"
        android:backgroundTint="@color/purple_200_topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="330dp"
        android:layout_height="480dp"
        android:src="@drawable/lesson1_01"
        android:scaleType="fitStart"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_topic_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>